<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SafeVault</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-3 col-md-2 d-none d-md-block bg-light sidebar p-3">
                <h5>SafeVault</h5>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" asp-page="/Home">Home</a></li>
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Dashboard/User">User Dashboard</a></li>
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-page="/Admin/Dashboard">Admin Dashboard</a></li>
                        }
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Account/Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Account/Register">Register</a></li>
                    }
                </ul>
                <hr />
                <div>
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <form method="post" asp-page="/Account/Logout">
                            <span class="me-2">@User.Identity!.Name</span>
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Logout</button>
                        </form>
                    }
                </div>
            </nav>
            <main role="main" class="col-12 col-md-10 ms-sm-auto px-4 py-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
