@page
@model IndexModel
@{
    ViewData["Title"] = "SafeVault";
}

<h1>Cadastro de Usuário Seguro</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="FormData.Username" class="form-label"></label>
        <input asp-for="FormData.Username" class="form-control" />
        <span class="text-danger" asp-validation-for="FormData.Username"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FormData.Email" class="form-label"></label>
        <input asp-for="FormData.Email" class="form-control" />
        <span class="text-danger" asp-validation-for="FormData.Email"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

@if (Model.ResultMessage is not null)
{
    <div class="alert alert-info">@Model.ResultMessage</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
